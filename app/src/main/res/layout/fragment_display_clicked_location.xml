<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".displayClickedLocation">

   <LinearLayout
       android:id="@+id/layout_addrBanner"
       android:layout_width="match_parent"
       android:layout_height="180dp"
       android:orientation="horizontal"
      android:background="@color/address_banner"
      >
      <ImageView
          android:id="@+id/iv_icon"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="10dp"
         />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginStart="18dp"
          android:layout_gravity="center_vertical"
          >
         <TextView
             android:id="@+id/tv_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:textSize="22sp"
             android:textStyle="bold"

             android:layout_marginBottom="8dp"
             />
         <TextView
             android:id="@+id/tv_addr"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/white"
             android:textSize="20sp"


             />
      </LinearLayout>

   </LinearLayout>

   <com.google.android.material.card.MaterialCardView
       android:id="@+id/card"
       android:layout_below="@id/layout_addrBanner"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="60dp"
       android:layout_marginHorizontal="10dp"

       >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >
      <LinearLayout
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp">

         <!-- Title, secondary and supporting text -->
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Business Status"
             android:textAppearance="?attr/textAppearanceHeadline6"
             />
         <TextView
             android:id="@+id/tv_Bstatus"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:text="Permanent Closed"
             android:textAppearance="?attr/textAppearanceBody2"
             android:textColor="?android:attr/textColorSecondary"
             />
      </LinearLayout>


   <LinearLayout
       android:layout_weight="1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="16dp"
       android:layout_marginLeft="5dp"
       >

      <!-- Title, secondary and supporting text -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Opening Hours"
          android:textAppearance="?attr/textAppearanceHeadline6"
          />
      <TextView
          android:id="@+id/tv_openH"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="false"
          android:textAppearance="?attr/textAppearanceBody2"
          android:textColor="?android:attr/textColorSecondary"
          />
   </LinearLayout>
</LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
         <LinearLayout
             android:layout_weight="0.2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="16dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />
            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="412.345, -1.2345"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                />
         </LinearLayout>


         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="16dp"
            android:layout_weight="1"
             >

            <!-- Title, secondary and supporting text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="4.5"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                />
         </LinearLayout>
      </LinearLayout>

   </LinearLayout>
   </com.google.android.material.card.MaterialCardView>

   <LinearLayout

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true"
    android:gravity="center_horizontal"
       android:layout_marginBottom="40dp"
       >

      <Button
          android:id="@+id/btn_back"
          android:layout_marginHorizontal="10dp"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:text="BACK"
          android:drawableLeft="@drawable/back_arrow"
         />
 <Space
     android:layout_width="10dp"
     android:layout_height="wrap_content"
    />
      <Button
          android:id="@+id/btn_fav"
          android:layout_marginHorizontal="10dp"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:text="favourite"
          android:drawableLeft="@drawable/favorite"
          />

   </LinearLayout>


</RelativeLayout>